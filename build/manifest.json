{
  "short_name": "Pick Commits",
  "name": "Pick Commits",
  "icons": {
    "16": "favicon.ico",
    "48": "logo192.png",
    "128": "logo512.png"
  },
  "start_url": ".",
  "display": "standalone",
  "theme_color": "#000000",
  "background_color": "#ffffff",
  "permissions": ["activeTab", "tabs", "contextMenus", "<all_urls>"],
  "optional_permissions": ["<all_urls>", "tabs", "contextMenus"],
  "manifest_version": 2,
  "version": "0.0.1",
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Pick Commits"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["./content.js"],
      "all_frames": true
    }
  ]
}
